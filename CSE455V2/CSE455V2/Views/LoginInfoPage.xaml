<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CSE455V2.Views.LoginInfoPage"
             Title="Login Information">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login Information:"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="Large"/>
            <Entry x:Name="userEmail"
                   IsReadOnly="True"/>
            <Entry x:Name="userPassword" 
                   IsReadOnly="True"
                   IsPassword="False"/>
            
            <Label Text="&#10;" />

            <Button Text="Change Email Address"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Clicked="ChangeEmailAddress" />
            <Button Text="Change Passord"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Clicked="ChangePassord" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>