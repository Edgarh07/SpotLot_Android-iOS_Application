<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSE455V2.Views.LoginPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid VerticalOptions="CenterAndExpand" Margin="20" RowSpacing="20">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackLayout Orientation="Vertical">
                    <Image VerticalOptions="CenterAndExpand" Source="Spot_Lot_Logo_v3.png"/>

                    <Entry Placeholder="Email" x:Name="Email" Text="{Binding Email}" Grid.Row="0"/>
                    <Entry Placeholder="Password" x:Name="Password" IsPassword="True" Text="{Binding Password}" Grid.Row="1"/>
                    <Button Text="Login" Grid.Row="2" BackgroundColor="#0077be" TextColor="White" Command="{Binding LoginCommand}"/>
                    <Button Text="Sign Up" Grid.Row="3" Command="{Binding SignUp}"/>
                    <Button Text="main menu test" Grid.Row="4" Clicked="Test_Clicked"/>
                    </StackLayout>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
